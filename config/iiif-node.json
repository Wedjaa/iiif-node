{
	"development": {
		"iiif-server": {
			"source": "/opt/images/sources",
			"online": "/opt/images/online",
			"cache": "/opt/images/cache",
			"baseuri": "http://172.17.0.2:3000/iiif"
		},
		"client": "public/app",
		"server": {
			"bind": "0.0.0.0"
		},
		"logger": {
			"module": "winston",
			"config": {
				"web": {
					"file": { "level": "debug" },
					"console": { "level": "debug", "colorize": true, "timestamp": true, "prettyPrint": true }
